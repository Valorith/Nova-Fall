{
  "name": "nova-fall",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Browser-based multiplayer territory control game",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @nova-fall/web dev",
    "dev:api": "pnpm --filter @nova-fall/api dev",
    "dev:ws": "pnpm --filter @nova-fall/ws-server dev",
    "dev:worker": "pnpm --filter @nova-fall/worker dev",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:e2e": "pnpm -r test:e2e",
    "db:generate": "pnpm --filter @nova-fall/api db:generate",
    "db:migrate": "pnpm --filter @nova-fall/api db:migrate",
    "db:seed": "pnpm --filter @nova-fall/api db:seed",
    "db:studio": "pnpm --filter @nova-fall/api db:studio",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.31.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
